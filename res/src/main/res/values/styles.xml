<resources>

    <style name="img.clickable" parent="">
        <item name="android:padding">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="txt.regular.medium" parent="">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="txt.regular.large" parent="">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="txt.bold" parent="">
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="txt.bold.medium" parent="txt.regular.medium">
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="txt.bold.large" parent="txt.regular.large">
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="txt.medium" parent="">
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <style name="txt.medium.medium" parent="txt.regular.medium">
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <style name="txt.medium.large" parent="txt.regular.large">
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <style name="txt.small" parent="">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="txt.small.bold" parent="txt.small">
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="txt.small.drawable" parent="txt.small.bold">
        <item name="android:drawablePadding">8dp</item>
    </style>

</resources>
